<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wjbaker.gocart.ui.activities.ShoppingActivity">

    <RelativeLayout
        android:id="@+id/shopping_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/shopping_navigation">

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/shopping_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/shopping_navigation" />

</RelativeLayout>
